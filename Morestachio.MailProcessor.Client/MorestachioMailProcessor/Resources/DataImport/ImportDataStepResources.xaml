<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:import1="clr-namespace:Morestachio.MailProcessor.Framework.Import;assembly=Morestachio.MailProcessor.Framework"
                    xmlns:lex="http://wpflocalizeextension.codeplex.com"
                    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:import="clr-namespace:MorestachioMailProcessor.Services.DataImport.Strategies"
                    xmlns:resources="clr-namespace:MorestachioMailProcessor.Resources">
    <DataTemplate DataType="{x:Type import:ImportDataStepViewModel}">
       <resources:FieldsetGrid
           Margin="15">
           <Label Content="{lex:Loc DataImport.Selector.SelectTitle}" Grid.Column="0"></Label>
           <mah:SplitButton ItemsSource="{Binding MailDataStrategies}"
                            SelectedItem="{Binding SelectedStrategy}"
                            Grid.Column="1">
               <mah:SplitButton.ItemTemplate>
                   <DataTemplate DataType="{x:Type import:IMailDataStrategyMetaViewModel}">
                       <Label Content="{Binding Name}"/>
                   </DataTemplate>
               </mah:SplitButton.ItemTemplate>
           </mah:SplitButton>
       </resources:FieldsetGrid>
    </DataTemplate>  
</ResourceDictionary>