<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dataImport="clr-namespace:Morestachio.MailProcessor.Client.Services.DataImport"
                    xmlns:lex="http://wpflocalizeextension.codeplex.com"
                    xmlns:resources="clr-namespace:Morestachio.MailProcessor.Client.Resources"
                    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks">
    <DataTemplate DataType="{x:Type dataImport:CSVMailDataStrategyMetaViewModel}">
        <resources:FieldsetGrid
            Margin="15">
            <Label Content="{lex:Loc DataImport.Strategy.CSV.FileName}" VerticalAlignment="Center"/>
            <DockPanel Grid.Column="1">
                
                <Button Command="{Binding PickFileCommand}"
                        DockPanel.Dock="Right">
                    <iconPacks:Material Width="22"
                                        Height="22"
                                        Kind="FileExcel" />
                </Button>
                <TextBox Text="{Binding FilePath, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Delay=250}" 
                         VerticalContentAlignment="Center"
                         DockPanel.Dock="Left"/>
            
            </DockPanel>
        </resources:FieldsetGrid>
    </DataTemplate>    
</ResourceDictionary>