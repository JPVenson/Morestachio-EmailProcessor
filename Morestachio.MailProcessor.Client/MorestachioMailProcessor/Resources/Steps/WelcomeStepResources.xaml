<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:steps="clr-namespace:Morestachio.MailProcessor.Client.ViewModels.Steps"
                    xmlns:lex="http://wpflocalizeextension.codeplex.com">
    <DataTemplate DataType="{x:Type steps:WelcomeStepViewModel}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label FontSize="22" Content="{lex:Loc Welcome.Title}"/>
            <Label Content="{lex:Loc Welcome.Content}"/>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>