<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:lex="http://wpflocalizeextension.codeplex.com"
                    xmlns:steps="clr-namespace:Morestachio.MailProcessor.Ui.ViewModels.Steps">
    <DataTemplate DataType="{x:Type steps:CloseStepViewModel}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                    Margin="15">
            <Label FontSize="22" Content="{lex:Loc CloseStep.Title}"/>
            <Label Content="{lex:Loc CloseStep.Content}"/>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>